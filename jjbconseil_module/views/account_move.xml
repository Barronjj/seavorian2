<odoo>
    <record model="ir.ui.view" id="rtsys_view_move_form">
        <field name="name">rtsys.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_account_id']" position="before">
                <field name="move_id"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='analytic_account_id']" position="after">
                <button name="action_view_account_analytic_line" 
                        type="object" 
                        icon="fa-pencil" 
                        class="btn btn-outline-primary btn-sm" 
                        string="Voir Ecriture Analytique" 
                        attrs="{'invisible':[('parent.state','!=','posted')]}"
                        context="{'my_move_id': move_id}"/>
            </xpath>            
        </field>             
    </record>            
</odoo>